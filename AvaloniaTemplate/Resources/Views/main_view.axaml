<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaTemplate.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaTemplate.Views.MainView"
        x:DataType="vm:MainViewModel"
        Title="Avalonia Template">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>


    <StackPanel FlowDirection="LeftToRight">
        <TextBlock Text="{Binding title}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button HorizontalAlignment="Center" VerticalAlignment="Bottom">Hello</Button>
    </StackPanel>

</Window>